extends ../layout

block content
    if (errors)
        each error in errors
            .alert.alert-danger=error.msg
    form(method='post')
        .form-group
            label Title
            input.form-control(type='text', name='title', value='#{article.title}')
        .form-group
            label Description
            input.form-control(type='text', name='description', value='#{article.description}')
        .form-group
            label Content
            textarea.form-control(name='content', rows='5')=article.content
        button.btn.btn-info(type='submit') Edit
