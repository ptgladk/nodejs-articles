extends layout

block content
    - if (errors)
        - each error in errors
            .alert.alert-danger=error.msg
    form(method='post', action='/registration')
        .form-group
            label Username
            input.form-control(type='text', name='username', placeholder='Username')
        .form-group
            label Email
            input.form-control(type='email', name='email', placeholder='Email')
        .form-group
            label Password
            input.form-control(type='password', name='password', placeholder='Password')
        .form-group
            label Confirm password
            input.form-control(type='password', name='password_confirm', placeholder='Confirm password')
        button.btn.btn-default(type='submit') Registration
